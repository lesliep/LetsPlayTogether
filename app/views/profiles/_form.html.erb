<%= form_for [current_user, @profile] do |f| %>
  <div class="form-group">
    <%= f.label :display_name %>
    <%= f.text_field :display_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :about %>
    <%= f.text_area :about, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :byline %>
    <%= f.text_field :byline, :class => "form-control" %>
  </div>

  <%= f.submit %>
<% end %>
