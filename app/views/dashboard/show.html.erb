<div class="page-header">
  <h1>Welcome, <%= current_user.username %></h1>
</div>

<div class="row">
  <div class="col-md-9">
<%= link_to "Edit your profile", 
  edit_user_profile_path(current_user.profile),
  :class=> "btn btn-default btn-large" %>
  <%= link_to "View profile",
    current_user,
  :class=> "btn btn-default btn-large"  %>
</div>

<% if current_user.friends %>
  <div class="col-md-3">
  <h2>Friends</h2>
  <ul class="list-group">
    <% current_user.friends.each do |friend| %>
      <li class="list-group-item">
      <%= link_to friend.profile.display_name, friend %>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
</div>
